{% extends 'base.html.twig' %}

{% block title %}Liste des questions{% endblock %}

{% block body %}

    <h1 class="my-4">Liste des questions</h1>

    <a href="{{path('quiz_question_edit')}}" class="btn btn-success mb-2"><i class="fa-solid fa-plus"></i> Créer une nouvelle question</a>

    <table class="table table-striped">
        <tr>
            <th>Nom</th>
            <th>Catégorie</th>
            <th>Actions</th>
        </tr>
        {% for question in questions %}
            <tr>
                <td>{{question.label}}</td>
                <td>{{question.category.label}}</td>
                <td>
                    <a class='btn btn-primary' href="{{path('quiz_question_edit', {question:question.id})}}"><i class="fa-solid fa-pen-nib"></i></a>
                </td>
            </tr>
        {% else %}
        <p>Aucune question enregistrée pour le moment</p>
        {% endfor %}
            
    </table>
{% endblock %}
